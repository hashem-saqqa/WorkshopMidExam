<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MyDialog">

    <TextView
        android:id="@+id/exitTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="الرسالة المنبثقة"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:textColor="#000"
        />
    <Button
        android:id="@+id/yesBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/exitTv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:backgroundTint="#f00"
        android:text="نعم"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/noBt"
        />

    <Button
        android:id="@+id/noBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/exitTv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:backgroundTint="#0f0"
        android:text="لا"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/yesBt"
        />

</androidx.constraintlayout.widget.ConstraintLayout>